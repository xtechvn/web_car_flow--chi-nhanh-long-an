@if (Model != null && Model.Count > 0)
{
    <table class="data-table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Giờ đăng ký online</th>
                <th>Tên khách hàng (Trại, đại lý)</th>
                <th>Tên lái xe</th>
                <th>Số điện thoại</th>
                <th>Biển số xe</th>
                <th>Ghi chú</th>
                <th>TT xe có mặt</th>
                <th>Tải trọng xe (kg)</th>
                <th>Trọng lượng thực tế (kg)</th>
                <th>Nhóm tài</th>
                <th>Tình trạng</th>
            </tr>
        </thead>
