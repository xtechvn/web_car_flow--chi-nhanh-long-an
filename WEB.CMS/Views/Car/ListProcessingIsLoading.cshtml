            @foreach (var item in Model)
            {
                switch (item.TrangThai)
                {
                    case 1:
                        {
                            <tr class="CartoFactory_@item.Id" data-queue="@(((DateTime)item.VehicleArrivalDate).ToString("HH:mm dd/MM/yyyy"))" style="@(ViewBag.type == 0 ?"background: orange;": "")">
                                <td>
                                    @item.RecordNumber
                                </td>
                                <td>@(((DateTime)item.RegisterDateOnline).ToString("HH:mm dd/MM/yyyy"))</td>
                                <td>
                                    <div style="display: flex; align-items: center">
                                        <div style="white-space: pre-line;">
                                            @item.CustomerName

                                        </div>
                                        <div>
                                            @if (ViewBag.type == 0)
                                            {
                                                <a class="cursor-pointer" style="margin-left:10px;" onclick="_processing_is_loading.AddOrUpdateNamePopup(@item.Id)" title="Chỉnh sửa">
                                                    <i class="icon-edit"></i>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>@item.DriverName</td>
                                <td>@item.PhoneNumber</td>
                                <td>
                                    @item.VehicleNumber
                                    @if (ViewBag.type == 0)
                                    {
                                        <a class="cursor-pointer" style="margin-left:10px;" onclick="_inspection.ShowAddOrUpdate(@item.InspectionId)" title="Chỉnh sửa">
                                            <i class="icon-edit"></i>
                                        </a>
                                    }
                                    
                                </td>

                                <td>@item.LicenseNumber</td>
                                <td>@item.VehicleStatusName</td>
                                <td>@(((decimal)item.VehicleWeightMax).ToString("N0"))</td>
                                <td>
                                    @if (ViewBag.type == 1)
                                    {
                                        <div class="">
                                            <p class="  Vehicle-Status currency">
                                                @(((decimal)item.VehicleLoadTaken).ToString("N0"))
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="">
                                            <p class="">
                                                <input type="text"
                                                class="input-form VehicleLoadTaken currency"
                                                maxlength="8"
                                                oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0,8);"
                                                placeholder="Vui lòng nhập trọng lượng thực tế"value="@(item.VehicleLoadTaken >0?((decimal)item.VehicleLoadTaken).ToString("N0"):"")" />


                                                <a class="cursor-pointer check-VehicleLoadTaken" title="Lưu" style="margin-left: 6px;">
                                                    <i class="icon-check"></i>
                                                </a>

                                            </p>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (ViewBag.type == 1)
                                    {
                                        <div class="">
                                            <p class="  Vehicle-Status" data-type="1">
                                                @item.LoadTypeName
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="status-dropdown">
                                            <button class="dropdown-toggle  Vehicle-Status" data-type="1" data-options='[
                                            @foreach (var allcode in AllCode2)
                                            {
                                                if (allcode.CodeValue == 0)
                                                {
                                                    @:{"text":"@allcode.Description","class":"status-green","value":"@allcode.CodeValue"}@(allcode != AllCode2.Last() ? "," : "")

                                                }
                                                else
                                                {
                                                    @:{"text":"@allcode.Description","class":"status-normal","value":"@allcode.CodeValue"}@(allcode != AllCode2.Last() ? "," : "")

                                                }


                                            }
                                            ]'>
                                                @item.LoadTypeName
                                            </button>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="status-dropdown">
                                        <button class="dropdown-toggle " data-options='[
                                        @foreach (var allcode in AllCode)
                                        {

                                            @:{"text":"@allcode.Description","value":"@allcode.CodeValue"}@(allcode != AllCode.Last() ? "," : "")

                                        }
                                        ]'>
                                            @item.LoadingStatusName
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        break;
                    case 2:
                        {
                            <tr class="CartoFactory_@item.Id" data-queue="@(((DateTime)item.VehicleArrivalDate).ToString("HH:mm dd/MM/yyyy"))" style="@(ViewBag.type == 0 ? "background: red;" : "")">
                                <td>
                                    @item.RecordNumber
                                </td>
                                <td>@(((DateTime)item.RegisterDateOnline).ToString("HH:mm dd/MM/yyyy"))</td>
                                <td>
                                    <div style="display: flex; align-items: center">
