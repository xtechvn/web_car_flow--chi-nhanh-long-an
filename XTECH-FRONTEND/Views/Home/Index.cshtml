    <script>
        // API Configuration
        const API_BASE_URL = 'https://longancargill.com/api'; // Change to your API URL
        const ENDPOINTS = {
            REGISTER: '/carregistration/registerV2',
            QUEUE_STATUS: '/carregistration/queue-status',
            CHECK_ZALO: '/carregistration/check-zalo-user',

